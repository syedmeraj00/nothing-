# Frontend Environment Variables Template
# Copy this to .env.local and fill in your actual values

# API Configuration
# Default: http://localhost:3001/api (if running backend locally)
REACT_APP_API_URL=http://localhost:3001/api

# For production, change to your domain:
# REACT_APP_API_URL=https://api.yourdomain.com/api

# Development Settings
REACT_APP_DEBUG=true
REACT_APP_LOG_LEVEL=debug

# Feature Flags
REACT_APP_ENABLE_SAMPLE_DATA=true
REACT_APP_ENABLE_INTEGRATIONS=true
REACT_APP_ENABLE_ADVANCED_ANALYTICS=true
REACT_APP_ENABLE_PDF_EXPORT=true

# UI Settings
REACT_APP_THEME=light
# Options: light | dark | auto (follows system preference)

# Timeout Settings
REACT_APP_API_TIMEOUT_MS=30000
REACT_APP_DATA_REFRESH_INTERVAL_MS=5000
