# Backend Environment Variables Template
# Copy this to .env and fill in your actual values
# NEVER commit the actual .env file with secrets!

# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration (SQLite - Development)
USE_SQLITE=true
# For file-based SQLite (persistent data):
# SQLITE_PATH=./data/esg.db

# Database Configuration (PostgreSQL - Production)
# Uncomment and configure for production:
# USE_SQLITE=false
# DB_HOST=your-postgres-host.rds.amazonaws.com
# DB_PORT=5432
# DB_USER=postgres_user
# DB_PASSWORD=your-secure-password
# DB_NAME=esg_production

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production-$(date +%s)
JWT_EXPIRE=24h

# Frontend URL (for CORS whitelist)
FRONTEND_URL=http://localhost:3000

# ERP Integration (Optional)
# ERP_BASE_URL=https://your-erp-system.com/api
# ERP_API_KEY=your-erp-api-key

# HR System Integration (Optional)
# HR_BASE_URL=https://your-hr-system.com/api
# HR_API_KEY=your-hr-api-key

# Logging Level
LOG_LEVEL=debug

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (for notifications, optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Features
ENABLE_SAMPLE_DATA=true
ENABLE_AUDIT_TRAIL=true
ENABLE_INTEGRATIONS=true
